<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="LinkedIn App Test">
    <test name="ChromeBrowser Test">

        <parameter name="browserName" value="chrome"></parameter>
        <parameter name="url" value="https://www.linkedin.com/"></parameter>
        <classes>
            <class name="com.blz.selenium.base.BaseClass">
                <methods>
                    <include name="setUp"></include>
                </methods>
            </class>
            <class name="com.blz.selenium.utility.CrossBrowser">
                <methods>
                    <include name="crossBrowser"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="FirefoxBrowser Test">

        <parameter name="browserName" value="Firefox"></parameter>
        <parameter name="url" value="https://www.linkedin.com/"></parameter>
        <classes>
            <class name="com.blz.selenium.base.BaseClass">
                <methods>
                    <include name="setUp"></include>
                </methods>

            </class>
            <class name="com.blz.selenium.utility.CrossBrowser">
                <methods>

                    <include name="crossBrowser"></include>
                </methods>
            </class>
        </classes>
    </test>


    <test name="EdgeBrowser Test">

        <parameter name="browserName" value="edge"></parameter>
        <parameter name="url" value="https://www.linkedin.com/"></parameter>
        <classes>
            <class name="com.blz.selenium.base.BaseClass">
                <methods>
                    <include name="setUp"></include>
                </methods>
            </class>
            <class name="com.blz.selenium.utility.CrossBrowser">
                <methods>

                    <include name="crossBrowser"></include>
                </methods>
            </class>
        </classes>
    </test>
</suite>